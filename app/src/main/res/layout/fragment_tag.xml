<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.TagFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="标签" />

    <com.yyxnb.view.text.FlowlayoutTags
        android:id="@+id/mFlowlayoutTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tag_radius="25dp"
        app:tag_strokeColor="@color/gray"
        app:tag_strokeWidth="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="单选标签" />

    <com.yyxnb.view.text.FlowlayoutTags
        android:id="@+id/mFlowlayoutTags1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tag_isSelect="true"
        app:tag_radius="25dp"
        app:tag_strokeColor="@color/gray"
        app:tag_strokeWidth="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="多选选标签" />

    <com.yyxnb.view.text.FlowlayoutTags
        android:id="@+id/mFlowlayoutTags2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tag_isSelect="true"
        app:tag_multiChooseable="true"
        app:tag_radius="25dp"
        app:tag_strokeColor="@color/gray"
        app:tag_strokeWidth="1dp" />

</LinearLayout>